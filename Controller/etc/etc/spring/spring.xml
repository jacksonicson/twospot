<?xml-stylesheet type="text/xsl" ?>
<!DOCTYPE beans SYSTEM "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<!-- Connectors -->
	<bean id="OutsideConnector" class="org.eclipse.jetty.server.nio.SelectChannelConnector">
		<property name="host" value="0.0.0.0" />
		<property name="port" value="8080" />

		<property name="acceptors" value="1" />
	</bean>

	<!-- Server -->
	<bean id="Server" class="org.eclipse.jetty.server.Server">
		<property name="threadPool">
			<bean class="org.eclipse.jetty.util.thread.QueuedThreadPool">
				<property name="minThreads" value="2" />
				<property name="maxThreads" value="5" />
			</bean>
		</property>

		<property name="connectors">
			<list>
				<ref bean="OutsideConnector" />
			</list>
		</property>

		<property name="handler" ref="HandlerCollection" />
	</bean>

	<!-- Request handling -->
	<bean id="HandlerCollection" class="org.prot.controller.handler.PortSelectionHandler">
		<property name="handlers">
			<list value-type="org.prot.controller.handler.HandlerDecorator">
				<ref bean="ProxyHandler" />
				<ref bean="RequestHandler" />
			</list>
		</property>
	</bean>


	<bean id="ProxyHandler" class="org.prot.controller.handler.HandlerDecorator">
		<property name="port" value="8079" />
		<property name="handler">
			<bean class="org.prot.controller.handler.ControlHandler" />
		</property>
	</bean>

	<bean id="RequestHandler" class="org.prot.controller.handler.HandlerDecorator">
		<property name="port" value="8080" />
		<property name="handler">
			<bean class="org.prot.controller.handler.RequestHandler" init-method="setup">
				<property name="appManager" ref="AppManager" />
			</bean>
		</property>
	</bean>

	<!-- Application beans -->
	<bean id="Controller" class="org.prot.controller.Controller">
		<property name="server" ref="Server" />
	</bean>

	<bean id="AppManager" class="org.prot.controller.manager.AppManager">
	</bean>
</beans>

