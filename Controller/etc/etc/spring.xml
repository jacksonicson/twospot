<?xml-stylesheet type="text/xsl" ?>
<!DOCTYPE beans SYSTEM "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<!-- Import other Spring-Configurations -->
	<import resource="zookeeper.xml" />

	<!-- Properties -->
	<bean id="PropertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location">
			<value>classpath:/etc/config.properties</value>
		</property>
	</bean>



	<!-- HTTP-Client -->
	<bean id="HttpClient" class="org.eclipse.jetty.client.HttpClient"
		init-method="start">
		<property name="threadPool" ref="ThreadPool" />

		<!-- Can be critical if used with complexe servers -->
		<property name="timeout" value="20000" />

		<property name="maxRetries" value="0" />
	</bean>



	<!-- ThreadPool -->
	<bean id="ThreadPool" class="org.eclipse.jetty.util.thread.QueuedThreadPool">
		<property name="minThreads" value="2" />
		<property name="maxThreads" value="10" />
	</bean>



	<!-- Connector -->
	<bean id="OutsideConnector" class="org.eclipse.jetty.server.nio.SelectChannelConnector">
		<property name="host" value="${http.controller.interface}" />
		<property name="port" value="${http.controller.port}" />
		<property name="acceptors" value="1" />
	</bean>



	<!-- Server -->
	<bean id="Server" class="org.eclipse.jetty.server.Server">
		<property name="threadPool" ref="ThreadPool" />

		<property name="connectors">
			<list>
				<ref bean="OutsideConnector" />
			</list>
		</property>

		<property name="handler" ref="RequestHandler" />
	</bean>



	<!-- Request handling -->

	<bean id="RequestHandler" class="org.prot.controller.handler.RequestHandler"
		init-method="init">
		<property name="appManager" ref="AppManager" />
		<property name="controllerProxy" ref="ControllerProxy" />
		<property name="requestManager" ref="RequestManager" />
	</bean>




	<!-- Application beans -->
	<bean id="ManagementService" class="org.prot.controller.zookeeper.ManagementService"
		init-method="init">
		<property name="zooHelper" ref="ZooHelper" />
		<property name="host" value="http://localhost" />
		<property name="name" value="controller0" />
	</bean>

	<bean id="ControllerProxy" class="org.prot.controller.handler.ControllerProxy">
		<property name="httpClient" ref="HttpClient" />
		<property name="appManager" ref="AppManager" />
		<property name="requestManager" ref="RequestManager" />
	</bean>


	<bean id="Controller" class="org.prot.controller.Controller">
		<property name="server" ref="Server" />
	</bean>


	<bean id="AppManager" class="org.prot.controller.manager.AppManager"
		init-method="init">
		<property name="threadPool" ref="ThreadPool" />
	</bean>

	<bean id="RequestManager" class="org.prot.controller.security.RequestManager">
		<property name="appManager" ref="AppManager" />
		<property name="controllerProxy" ref="ControllerProxy" />
	</bean>


	<!-- Services for AppServers -->
	<bean id="UserServiceExporter" class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="appserver/UserService" />

		<property name="service">
			<bean class="org.prot.controller.services.user.UserServiceImpl">
				<property name="appManager" ref="AppManager" />
			</bean>
		</property>

		<property name="serviceInterface"
			value="org.prot.controller.services.user.UserService" />

		<property name="registryPort" value="${rmi.registry.port}" />
	</bean>

	<bean id="DeployServiceExporter" class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="appserver/DeployService" />

		<property name="service">
			<bean class="org.prot.controller.services.deploy.DeployServiceImpl">
				<property name="appManager" ref="AppManager" />
			</bean>
		</property>

		<property name="serviceInterface"
			value="org.prot.controller.services.deploy.DeployService" />

		<property name="registryPort" value="${rmi.registry.port}" />
	</bean>

	<!-- Management -->
	<bean id="ManagementWatcher" class="org.prot.controller.management.ManagementWatcher"
		init-method="init">
		<property name="manager" ref="AppManager" />
	</bean>

	<!-- JMX -->
	<bean id="MbeanServer" class="org.springframework.jmx.support.MBeanServerFactoryBean" />

	<bean id="ServerConnector"
		class="org.springframework.jmx.support.ConnectorServerFactoryBean">
		<property name="objectName" value="connector:name=rmi" />

		<property name="serviceUrl"
			value="service:jmx:rmi:///jndi/rmi://localhost:${rmi.registry.port}/server" />

		<property name="server">
			<ref local="MbeanServer" />
		</property>
	</bean>

	<bean id="JmxExporter" class="org.springframework.jmx.export.MBeanExporter">
		<property name="server" ref="MbeanServer" />

		<property name="beans">
			<map>
				<entry key="bean:name=deployment">
					<bean class="org.prot.controller.management.jmx.JmxDeployment">
						<property name="management" ref="ManagementWatcher" />
					</bean>
				</entry>
				<entry key="bean:name=resources">
					<bean class="org.prot.controller.management.jmx.JmxResources">
						<property name="management" ref="ManagementWatcher" />
					</bean>
				</entry>
			</map>
		</property>
	</bean>


	<!-- Platform services -->
	<bean id="ControllerService"
		class="org.prot.controller.services.controller.ControllerServiceImpl">
		<property name="manager" ref="AppManager" />
	</bean>

	<bean id="ControllerServiceExporter" class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="ControllerService" />
		<property name="service" ref="ControllerService" />
		<property name="serviceInterface"
			value="org.prot.controller.services.controller.ControllerService" />

		<property name="registryPort" value="${rmi.registry.port}" />
	</bean>

</beans>

