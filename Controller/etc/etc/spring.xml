<?xml-stylesheet type="text/xsl" ?>
<!DOCTYPE beans SYSTEM "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<!-- Import other Spring-Configurations -->
	<import resource="zookeeper.xml" />

	<!-- Bootstrapping -->
	<bean id="Controller" class="org.prot.controller.Controller">
		<property name="server" ref="Server" />
	</bean>

	<!-- Properties -->
	<bean id="PropertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	</bean>

	<!-- HTTP-Client -->
	<bean id="HttpClient" class="org.eclipse.jetty.client.HttpClient"
		init-method="start">
		<property name="threadPool" ref="ThreadPool" />
		<property name="timeout" value="30000" />
		<property name="maxRetries" value="0" />
		<property name="connectorType" value="2" />
	</bean>

	<!-- ThreadPool -->
	<bean id="ThreadPool" class="org.eclipse.jetty.util.thread.QueuedThreadPool">
		<property name="minThreads" value="5" />
		<property name="maxThreads" value="20" />
	</bean>

	<!-- Connector -->
	<bean id="OutsideConnector" class="org.eclipse.jetty.server.nio.SelectChannelConnector">
		<property name="host" value="${http.controller.interface}" />
		<property name="port" value="${http.controller.port}" />
		<property name="acceptors" value="1" />
		<property name="statsOn" value="false" />
		<property name="acceptQueueSize" value="30" />
	</bean>

	<!-- Server -->
	<bean id="Server" class="org.eclipse.jetty.server.Server">
		<property name="threadPool" ref="ThreadPool" />
		<property name="handler" ref="RequestHandler" />

		<property name="connectors">
			<list>
				<ref bean="OutsideConnector" />
			</list>
		</property>
	</bean>

	<!-- Request handling -->
	<bean id="RequestHandler" class="org.prot.controller.handler.RequestHandler">
		<property name="appManager" ref="AppManager" />
		<property name="requestProcessor" ref="RequestProcessor" />
		<property name="stats" ref="Stats" />
	</bean>


	<!-- Application beans -->
	<bean id="Stats" class="org.prot.controller.stats.Stats"
		init-method="init">
		<property name="registry" ref="AppRegistry" />
		<property name="processors">
			<list>
				<bean class="org.prot.controller.stats.IdleProcessor" />
			</list>
		</property>
	</bean>

	<bean id="ManagementService" class="org.prot.controller.zookeeper.ManagementService"
		init-method="init">
		<property name="zooHelper" ref="ZooHelper" />
		<property name="networkInterface" value="${zk.controller.networkInterface}" />
	</bean>

	<bean id="AppRegistry" class="org.prot.controller.app.AppRegistry">
	</bean>

	<bean id="ProcessWorker" class="org.prot.controller.app.ProcessWorker">
		<property name="threadPool" ref="ThreadPool" />
	</bean>

	<bean id="AppManager" class="org.prot.controller.app.AppManager"
		init-method="init">
		<property name="registry" ref="AppRegistry" />
		<property name="processWorker" ref="ProcessWorker" />
		<property name="managementService" ref="ManagementService" />
	</bean>

	<bean id="RequestProcessor" class="org.prot.controller.handler.RequestProcessor">
		<property name="appManager" ref="AppManager" />
		<property name="httpClient" ref="HttpClient" />
	</bean>

	<bean id="AppServerWatcher" class="org.prot.controller.management.AppServerWatcher">
		<property name="registry" ref="AppRegistry" />
	</bean>



	<!-- Services for AppServers -->
	<bean id="UserServiceExporter" class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="appserver/UserService" />

		<property name="service">
			<bean class="org.prot.controller.services.user.UserServiceImpl">
				<property name="tokenChecker" ref="AppRegistry" />
			</bean>
		</property>

		<property name="serviceInterface"
			value="org.prot.controller.services.user.UserService" />

		<property name="registryPort" value="${rmi.controller.registry.port}" />
	</bean>

	<bean id="DeployServiceExporter" class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="appserver/DeployService" />

		<property name="service">
			<bean class="org.prot.controller.services.deploy.DeployServiceImpl">
				<property name="tokenChecker" ref="AppRegistry" />
				<property name="managementService" ref="ManagementService" />
			</bean>
		</property>

		<property name="serviceInterface"
			value="org.prot.controller.services.deploy.DeployService" />

		<property name="registryPort" value="${rmi.controller.registry.port}" />
	</bean>

	<bean id="DbDao" class="org.prot.controller.services.db.HbaseDbDao" />

	<bean id="DbServiceExporter" class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="appserver/DbService" />

		<property name="service">
			<bean class="org.prot.controller.services.db.DbServiceImpl">
				<property name="tokenChecker" ref="AppRegistry" />
				<property name="dbDao" ref="DbDao" />
			</bean>
		</property>

		<property name="serviceInterface" value="org.prot.controller.services.db.DbService" />

		<property name="registryPort" value="${rmi.controller.registry.port}" />
	</bean>

	<bean id="LogServiceExporter" class="org.springframework.remoting.rmi.RmiServiceExporter">
		<property name="serviceName" value="appserver/LogService" />

		<property name="service">
			<bean class="org.prot.controller.services.log.LogServiceImpl">
				<property name="tokenChecker" ref="AppRegistry" />
			</bean>
		</property>

		<property name="serviceInterface" value="org.prot.controller.services.log.LogService" />

		<property name="registryPort" value="${rmi.controller.registry.port}" />
	</bean>

	<!-- JMX -->
	<bean id="MbeanServer" class="org.springframework.jmx.support.MBeanServerFactoryBean" />

	<bean id="ServerConnector"
		class="org.springframework.jmx.support.ConnectorServerFactoryBean">
		<property name="objectName" value="connector:name=rmi" />

		<!-- Register the services in the local RMI registry -->
		<property name="serviceUrl"
			value="service:jmx:rmi:///jndi/rmi://localhost:${rmi.controller.registry.port}/controller" />

		<property name="threaded" value="true" />
		<property name="daemon" value="true" />

		<property name="server">
			<ref local="MbeanServer" />
		</property>
	</bean>

	<bean id="JmxExporter" class="org.springframework.jmx.export.MBeanExporter">
		<property name="server" ref="MbeanServer" />

		<property name="registrationBehaviorName" value="REGISTRATION_REPLACE_EXISTING" />

		<property name="beans">
			<map>
				<entry key="bean:name=resources">
					<bean class="org.prot.controller.management.ControllerPing">
						<property name="appServerWatcher" ref="AppServerWatcher" />
						<property name="stats" ref="Stats" />
					</bean>
				</entry>
			</map>
		</property>
	</bean>

</beans>

