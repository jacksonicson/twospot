<Configure id="Server" class="org.eclipse.jetty.server.Server">

	<!-- define the thread pool -->
	<Set name="ThreadPool">
		<New class="org.eclipse.jetty.util.thread.QueuedThreadPool">
			<Set name="minThreads">1</Set>
			<Set name="maxThreads">5</Set>
		</New>
	</Set>


	<!-- add a new SelectChannelConnector -->
	<Call name="addConnector">
		<Arg>
			<New id="SelectChannelConnector" class="org.eclipse.jetty.server.nio.SelectChannelConnector">
				<Set name="host">
					<SystemProperty name="jetty.host" />
				</Set>

				<Set name="port">
					<SystemProperty name="jetty.port" default="9090" />
				</Set>

				<Set name="Acceptors">1</Set>
				<Set name="statsOn">false</Set>
			</New>
		</Arg>
	</Call>

	<!-- set main handler -->
	<Set name="handler">
		<!-- main handler is a handler collection -->
		<New id="Handlers" class="org.eclipse.jetty.server.handler.HandlerCollection">
			<Set name="handlers">

				<Array type="org.eclipse.jetty.server.Handler">
					<Item>
						<New id="ContextCollection"
							class="org.eclipse.jetty.server.handler.ContextHandlerCollection" />
					</Item>
				</Array>

			</Set>
		</New>
	</Set>

	<Call name="addBean">
		<Arg>
			<New class="org.eclipse.jetty.deploy.WebAppDeployer">

				<!-- context to deploy the web applications -->
				<Set name="contexts">
					<Ref id="ContextCollection" />
				</Set>

				<Set name="webAppDir">
					<SystemProperty name="jetty.home" default="." />/webapps
				</Set>

				<Set name="parentLoaderPriority">false</Set>

				<Set name="extract">true</Set>

				<Set name="allowDuplicates">false</Set>

				<Call name="setAttribute">
					<Arg>org.eclipse.jetty.server.webapp.ContainerIncludeJarPattern
					</Arg>
					<Arg>.*/jsp-api-[^/]*\.jar$|.*/jsp-[^/]*\.jar$</Arg>
				</Call>
			</New>
		</Arg>
	</Call>

</Configure>