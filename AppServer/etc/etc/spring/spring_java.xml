<?xml-stylesheet type="text/xsl" ?>
<!DOCTYPE beans SYSTEM "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<bean id="Configurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="placeholderPrefix" value="#{" />
		<property name="placeholderSuffix" value="}" />
	</bean>

	<bean id="InsideConnector" class="org.eclipse.jetty.server.nio.SelectChannelConnector">
		<property name="host" value="127.0.0.1" />

		<property name="port" value="9090" />

		<property name="acceptors" value="1" />
		<property name="statsOn" value="false" />
	</bean>

	<bean id="Server" class="org.eclipse.jetty.server.Server">
		<property name="threadPool">
			<bean class="org.eclipse.jetty.util.thread.QueuedThreadPool">
				<property name="minThreads" value="2" />
				<property name="maxThreads" value="5" />
			</bean>
		</property>

		<property name="connectors">
			<list>
				<ref bean="InsideConnector" />
			</list>
		</property>

		<property name="handler" ref="HandlerCollection" />

	</bean>

	<bean id="HandlerCollection" class="org.eclipse.jetty.server.handler.HandlerCollection">
		<property name="handlers">
			<list>
				<ref bean="ContextCollectionHandler" />
			</list>
		</property>
	</bean>

	<bean id="ContextCollectionHandler"
		class="org.eclipse.jetty.server.handler.ContextHandlerCollection">
	</bean>


	<bean id="WebAppDeployer" class="org.eclipse.jetty.deploy.WebAppDeployer">
		<property name="contexts" ref="ContextCollectionHandler" />

		<property name="webAppDir" value="./webapps" />

		<property name="parentLoaderPriority" value="false" />

		<property name="extract" value="true" />

		<property name="allowDuplicates" value="false" />
	</bean>

</beans>

