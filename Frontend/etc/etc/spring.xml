<?xml-stylesheet type="text/xsl" ?>
<!DOCTYPE beans SYSTEM "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<!-- Import other Spring-Configurations -->
	<import resource="zookeeper.xml"/>
	
	<!-- Properties -->
	<bean id="PropertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location">
			<value>classpath:/etc/config.properties</value>
		</property>
	</bean>



	<!-- Connectors -->
	<bean id="OutsideConnector" class="org.eclipse.jetty.server.nio.SelectChannelConnector">
		<property name="host" value="${http.frontend.interface}" />
		<property name="port" value="${http.frontend.port}" />
		<property name="acceptors" value="30" />
	</bean>



	<!-- ThreadPool -->
	<bean id="ThreadPool" class="org.eclipse.jetty.util.thread.QueuedThreadPool">
		<property name="minThreads" value="30" />
		<property name="maxThreads" value="40" />
	</bean>



	<!-- Server -->
	<bean id="Server" class="org.eclipse.jetty.server.Server">
		<property name="threadPool" ref="ThreadPool" />

		<property name="connectors">
			<list>
				<ref bean="OutsideConnector" />
			</list>
		</property>

		<property name="handler" ref="HandlerCollection" />
	</bean>



	<!-- Request handling -->
	<bean id="HandlerCollection" class="org.eclipse.jetty.server.handler.HandlerCollection">
		<property name="handlers">
			<list>
				<ref bean="FilterHandler" />
			</list>
		</property>
	</bean>

	<bean id="FilterHandler" class="org.prot.frontend.handlers.FilterHandler"
		init-method="init">
		<property name="frontendService" ref="FrontendService" />
		<property name="appCache" ref="AppCache" />
		<property name="deployer" ref="AppDeployer" />
		<property name="loginHandler" ref="LoginHandler" />
		<property name="proxyHelper" ref="ProxyHelper" />
	</bean>



	<!--  Application beans -->
	<bean id="ProxyHelper" class="org.prot.util.handler.HttpProxyHelper">
		<property name="httpClient" ref="HttpClient" />
	</bean>


	<bean id="AppCache" class="org.prot.frontend.cache.timeout.TimeoutAppCache" />


	<bean id="AppDeployer" class="org.prot.frontend.deploy.AppDeployer">
		<property name="frontendService" ref="FrontendService" />
		<property name="httpClient" ref="HttpClient" />
	</bean>

	<bean id="ManagementService" class="org.prot.frontend.zookeeper.ManagementService"
		init-method="init">
		<property name="zooHelper" ref="ZooHelper" />
	</bean>


	<!-- HTTP Client -->
	<bean id="HttpClient" class="org.eclipse.jetty.client.HttpClient"
		init-method="start">
		<property name="threadPool" ref="ThreadPool" />
	</bean>

	<bean id="LoginHandler" class="org.prot.frontend.deploy.login.LoginHandler">
	</bean>


	<!-- Remote -->
	<bean id="FrontendService" class="org.prot.frontend.Manager" />
	
</beans>
